---
title: People Tempalte
slug: content_type_template
listed: false
published: true
cache_strategy: none
response_type: text/html
position: 1
content_type: people
---
{% extends default %}
{% block main %}
<div class='block-container dark'>
  <div class='block full'>
    <div class='title'>{{ person.name }}</div>
  </div>
</div>
<div class='block-container light'>
  <div class='block full'>
    <div class='profile'>
      <img src='{{ person.picture.url }}'>
      <div class='info-container'>
        <div class='name'>{{ person.name }}</div>
        <div class='role'>{{ person.position }}</div>
        <div class='bio'>{{ person.bio }}</div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
