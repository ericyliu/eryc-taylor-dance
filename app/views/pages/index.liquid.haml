{% extends default %}

{% block main %}
{% capture video_url %}{% editable_file "Banner Video" %}/samples/videos/banner.mp4{% endeditable_file %}{% endcapture %}
.banner-container
  .banner
    .title ERYC TAYLOR DANCE
    %video{id: "banner-video", width: "1024", height: "500", loop: true, autoplay: true, muted: true}
      %source{src: "{{ video_url }}", type: "video/mp4"}
    .play.button{onclick: "playPause()", style: "display:none"}
    .pause.button{onclick: "playPause()", style: "display:none"}
    .mute.button{onclick: "muteUnmute()", style: "display:none"}
    .unmute.button{onclick: "muteUnmute()", style: "display:none"}

    :javascript
      document.getElementById("banner-video").oncanplay = function() {
        $('.pause.button').show();
        $('.unmute.button').show();
        $('.banner .title').hide();
      };

      function playPause() {
        var video = document.getElementById("banner-video")
        if (video.paused) {
          video.play();
          $('.play.button').hide();
          $('.pause.button').show();
        }
        else {
          $('.play.button').show();
          $('.pause.button').hide();
          video.pause();
        }
      }
      function muteUnmute() {
        var video = document.getElementById("banner-video")
        video.muted = !video.muted;
        if (video.muted) {
          $('.mute.button').hide();
          $('.unmute.button').show();
        }
        else {
          $('.mute.button').show();
          $('.unmute.button').hide();
        }
      }

